@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<form method="post">
    <h3>@Model.Message</h3>
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var costumer in Model.Costumers)
            {
                <tr>
                    <td>@costumer.Id</td>
                    <td>@costumer.Name</td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@costumer.Id">Edit</a>
                        <button type="submit" asp-page-handler="delete" asp-route-id="@costumer.Id">delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-page="./Create">Create</a>
</form>
