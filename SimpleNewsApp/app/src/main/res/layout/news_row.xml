<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:paddingBottom="10dp">
    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            app:layout_constraintTop_toTopOf="parent" app:cardCornerRadius="10dp"
    android:layout_margin="10dp">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    app:srcCompat="@mipmap/ic_launcher"
                    android:id="@+id/newsImage"
                    android:scaleType="centerCrop"/>
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">
                <TextView
                        android:text="TITLE"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/title_row"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textAlignment="viewStart"/>
                <TextView
                        android:layout_below="@id/title_row"
                        android:text="AUTHOR"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/authorNews"
                        android:textSize="12sp"/>
                <TextView
                        android:text="DATE"
                        android:layout_below="@id/title_row"
                        android:layout_toRightOf="@id/authorNews"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/newsDate"
                        android:textSize="12sp"/>
                <TextView
                        android:text=""
                        android:layout_below="@id/newsDate"
                        android:background="@android:color/darker_gray"
                        android:layout_width="match_parent"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:layout_height="1dp" android:id="@+id/longbar"/>
                <TextView
                        android:text="DESCRIPTION"
                        android:layout_below="@id/longbar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/newsDesc"/>
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>